{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "isolatedDeclarations": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "declaration": true
    },
    "include": ["src", "tsdown.config.ts", "vitest.config.ts"],
    "exclude": ["node_modules", "dist"]
}
