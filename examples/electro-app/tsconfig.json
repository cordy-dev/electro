{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "preserveSymlinks": true,
        "outDir": "dist",
        "declaration": true,
        "types": ["vite/client"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
